<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MushafGontor" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#0288D1</item> <!-- Warna Biru yang sedikit lebih Teal -->
        <item name="colorPrimaryVariant">#0277BD</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Style untuk Waktu Sholat -->
    <style name="PrayerTimeItem" parent="android:Widget">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="PrayerTimeTitle" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="PrayerTimeValue" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <!-- Style untuk Wadah per Menu (Bisa di-klik) -->
    <style name="HomeMenuItem" parent="android:Widget">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">2dp</item>
        <item name="android:paddingEnd">2dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <!-- Style untuk Kartu Kotak di belakang Ikon -->
    <style name="HomeMenuIconContainer" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="cardCornerRadius">18dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <!-- Style untuk Ikon di dalam Kartu -->
    <style name="HomeMenuIcon">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">24dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:tint">@android:color/black</item>
    </style>

    <!-- Style untuk Teks di bawah Kartu Ikon -->
    <style name="HomeMenuText" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:minLines">2</item>
        <item name="android:maxLines">2</item>
        <item name="android:gravity">center_horizontal|top</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- Style untuk AppBar di halaman Surah List -->
    <style name="Theme.MushafGontor.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.MushafGontor.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>

